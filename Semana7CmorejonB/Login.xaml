<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7CmorejonB.Login">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="30">
            <Entry Placeholder="Usuario" Keyboard="Email" x:Name="usuario"/>
            <Entry Placeholder="Contraseña" IsPassword="True" x:Name="clave"/>

            <Button x:Name="btn_login" Text="Iniciar sesión"
                    BackgroundColor="DarkCyan" TextColor="White"
                    Clicked="btn_login_Clicked"/>
            <Button x:Name="btn_registrar" Text="Registrar"
                    Clicked="btn_registrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>